syntax on

let mapleader = " "
let maplocalleader = " "

set number
set relativenumber
set tabstop=4
set shiftwidth=4
set expandtab
set autoindent
set nohlsearch
set incsearch
set ignorecase
set smartcase

set mouse=a
set undofile

" Some helpful mappings
noremap <C-c> <Esc>

" Navigate
noremap gs ^
noremap gh 0
noremap gl $

noremap j jzz
noremap k kzz
