syntax on

set number
set relativenumber
set tabstop=4
set shiftwidth=4
set expandtab
set autoindent
set nohlsearch
set incsearch
set scrolloff=3
set mouse=a

set undodir=~/.vimdid
set undofile

let mapleader = " "
let maplocalleader = " "

inoremap <C-c> <Esc>
vnoremap <C-c> <Esc>
nnoremap <C-c> <Esc>
